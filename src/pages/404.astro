---
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="404">
  <div class="wrapper">
    <h1>
      404!
    </h1>
    <p>
      The page you are looking for does not exist.
    </p>
    <p>
      <a href="/">Go back to the homepage</a>
    </p>
  </div>
</BaseLayout>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>
