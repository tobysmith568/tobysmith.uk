---
import { getCollection } from "astro:content";
import ProseLayout from "../layouts/ProseLayout.astro";

const policies = await getCollection("policies");
const termPolicy = policies.find(p => p.slug === "cookies");

if (!termPolicy) {
  throw new Error("Cannot find the cookies policy");
}

const { Content } = await termPolicy.render();
---

<ProseLayout title="Cookies Policy">
  <Content />
</ProseLayout>
