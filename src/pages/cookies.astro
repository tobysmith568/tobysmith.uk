---
import { getCollection } from "astro:content";
import PolicyLayout from "../layouts/PolicyLayout.astro";

const title = "Cookies Policy";
const description = "The cookies policy for tobysmith.uk";

const policies = await getCollection("policies");
const termPolicy = policies.find(p => p.slug === "cookies");

if (!termPolicy) {
  throw new Error("Cannot find the cookies policy");
}

const { Content } = await termPolicy.render();
---

<PolicyLayout title={title} description={description} noIndex>
  <Content />
</PolicyLayout>
