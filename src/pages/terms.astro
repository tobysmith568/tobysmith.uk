---
import { getCollection } from "astro:content";
import PolicyLayout from "../layouts/PolicyLayout.astro";

const title = "Terms & Conditions";
const description = "The Terms & Conditions for tobysmith.uk";

const policies = await getCollection("policies");
const termPolicy = policies.find(p => p.slug === "terms");

if (!termPolicy) {
  throw new Error("Cannot find the terms policy");
}

const { Content } = await termPolicy.render();
---

<PolicyLayout title={title} description={description} noIndex>
  <Content />
</PolicyLayout>
